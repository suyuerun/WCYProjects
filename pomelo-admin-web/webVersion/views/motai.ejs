<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">修改密码</h4>
            </div>
            <form action="/user/uptPwd" method="post" onsubmit="return onUptpwd()">
            <div class="modal-body">
                <input type="password" class="form-control pwdInput" id="oldPwd"  onblur="ckpassword()" placeholder="请输入旧密码"><span id="spassword"> </span>
                <input type="password" class="form-control pwdInput" id="newPwd"  placeholder="请输入新密码">
                <input type="password" class="form-control pwdInput" id="newPwd1" name="newPwd" onblur="ckpassword1()" placeholder="请确认新密码"><span id="spassword1"> </span>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary" value="提交更改">
            </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>