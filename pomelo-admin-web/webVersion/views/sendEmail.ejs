<html>
<head>
    <title></title>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

    <script src="/js/sendEmail.js"></script>
    <script src="/js/vue.min.js"></script>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

</head>
<body>
<% include common %>
<div class="serverList">
    <div v-show="itemList.length>0" style="position: absolute;margin-left: 63%;background-color: #DDDDDD;border-radius: 10px;padding-top: 6px">
        <ul v-model="itemList" v-for="(item,index) in itemList" style="list-style-type:none; ">
            <li>物品编号：{{ item.id }}，数量：{{ item.number }}<a @click=dele(index) class="btn btn-sm " ><img src="/front/Images/errorMediumIcon.png" alt=""></a></li>
        </ul>
    </div>

    <input type="text" v-model="uid" class="form-control " style="margin-left: 3%;margin-top: 3%;width: 50%"placeholder="请输入uid">
    <input type="text" v-model="title" class="form-control " style="margin-left: 3%;margin-top: 1%;width: 50%" placeholder="请输入邮件标题">
    <textarea name="content" v-model="content" id="content" class="form-control" cols="30" rows="10" style="margin-left: 3%;margin-top: 1%;width: 50%" placeholder="请输入邮件内容"></textarea>
    <input type="number" v-model="gold" class="form-control" style="margin-left: 3%;margin-top: 1%;width: 50%" placeholder="请输入添加梦幻币数量">
    <input type="number" v-model="bean" class="form-control" style="margin-left: 3%;margin-top: 1%;width: 50%" placeholder="请输入添加梦幻豆数量">
    <input type="text" v-model="item" class="form-control" style="margin-left: 3%;margin-top: 1%;width: 50%" placeholder="请输入添加物品编号">
    <input type="number" v-model="num" class="form-control" style="margin-left: 3%;margin-top: 1%;width: 50%" placeholder="请输入添加物品数量">
    <button @click=addItemss(item,num) class="btn btn-primary " style="margin-left: 18%;margin-top: 1%;">添加</button>
    <button @click=submited(uid,title,content,gold,bean,item,num) class="btn btn-primary " style="margin-left: 11%;margin-top: 1%;">提交</button>

</div>

</div>
<div class="col-md-1"></div>

</div>
</body>
</html>